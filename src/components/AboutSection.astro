<section id="about" class="section about-section">
  <div class="container">
    <div class="about-grid">
      <div class="about-content">
        <h2>About Me</h2>
        <div class="about-text-image">
          <div class="about-text">
            <p>
              I like figuring things out—lately that's been building AI agents for customer support at allUP.
            </p>
            <p>
              Looking for my next challenge in AI operations or development.
            </p>
            <p>
              Outside of work: usually hunting for good soup, grabbing a pint with friends, or gaming on the couch with my cat Tuna <span class="tuna-arrow">→</span>
            </p>
          </div>
          <div class="about-image">
            <img src="/personal-website/images/tuna.jpg" alt="Tuna the cat wrapped in a cozy blanket" />
          </div>
        </div>

        <div class="skills-section">
          <h3>Technical Skills</h3>
          <div class="skills-grid">
            <div class="skill-category">
              <h4>AI & Development</h4>
              <ul>
                <li>OpenAI Agents SDK</li>
                <li>TypeScript</li>
                <li>Python</li>
                <li>Git / GitHub</li>
                <li>Cursor IDE</li>
                <li>Anthropic Claude / Claude Code</li>
              </ul>
            </div>
            <div class="skill-category">
              <h4>Tools & Platforms</h4>
              <ul>
                <li>Braintrust</li>
                <li>Front</li>
                <li>Notion</li>
                <li>HubSpot</li>
                <li>Customer.io</li>
                <li>Hex</li>
              </ul>
            </div>
            <div class="skill-category">
              <h4>Design</h4>
              <ul>
                <li>Figma</li>
                <li>Adobe Creative Suite</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    background-color: var(--bg-primary);
  }

  .about-content h2 {
    margin-bottom: 24px;
  }

  .about-text-image {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 48px;
    align-items: center;
  }

  .about-text p {
    font-size: 1.05rem;
    margin-bottom: 20px;
    max-width: 640px;
  }

  .about-text p:last-child {
    margin-bottom: 0;
  }

  .tuna-arrow {
    display: inline-block;
    font-weight: 700;
    font-size: 1.2em;
    position: relative;
    top: 3px;
  }

  .about-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .about-image img {
    max-width: 100%;
    height: auto;
    max-height: 280px;
    object-fit: cover;
    border-radius: 8px;
    filter: grayscale(100%);
  }

  .skills-section {
    margin-top: 48px;
  }

  .skills-section h3 {
    margin-bottom: 24px;
    color: var(--text-primary);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .skill-category h4 {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 12px;
  }

  .skill-category ul {
    list-style: none;
  }

  .skill-category li {
    color: var(--text-secondary);
    font-size: 0.95rem;
    padding: 6px 0;
  }

  @media (max-width: 768px) {
    .about-text-image {
      grid-template-columns: 1fr;
    }

    .about-image {
      margin-top: 24px;
    }

    .about-image img {
      max-height: 300px;
    }

    .tuna-arrow {
      display: none;
    }

    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
