<section id="about" class="section about-section">
  <div class="container">
    <div class="about-grid">
      <div class="about-content">
        <h2>About Me</h2>
        <div class="about-text-image">
          <div class="about-text">
            <p>
              I like figuring things out—lately that's been building AI agents for customer support at allUP.
            </p>
            <p>
              Looking for my next challenge in AI operations or product.
            </p>
            <p>
              Outside of work: usually hunting for good soup, grabbing a pint with friends, or gaming on the couch with my cat Tuna <span class="tuna-arrow">→</span>
            </p>
          </div>
          <div class="about-image">
            <img src="/images/tuna.jpg" alt="Tuna the cat wrapped in a cozy blanket" />
          </div>
        </div>

        <div class="skills-section">
          <h3 class="skills-header-desktop">Technical Skills</h3>

          <!-- Mobile toggle with preview -->
          <button class="skills-toggle" aria-expanded="false" aria-controls="skills-content">
            <span class="skills-toggle-text">Technical Skills</span>
            <svg class="skills-chevron" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="skills-preview">
            <span class="skill-pill">OpenAI Agents SDK</span>
            <span class="skill-pill">Claude Code</span>
            <span class="skill-pill">Notion</span>
            <span class="skill-pill-more">+13 more</span>
          </div>

          <div id="skills-content" class="skills-grid">
            <div class="skill-category">
              <h4>AI & Development</h4>
              <ul>
                <li>OpenAI Agents SDK</li>
                <li>Claude Code</li>
                <li>Braintrust</li>
                <li>TypeScript</li>
                <li>Cursor IDE</li>
                <li>GitHub</li>
                <li>Python, R, SQL</li>
              </ul>
            </div>
            <div class="skill-category">
              <h4>Tools & Platforms</h4>
              <ul>
                <li>Notion</li>
                <li>Front</li>
                <li>HubSpot</li>
                <li>Customer.io</li>
                <li>Hex</li>
                <li>Amplitude</li>
                <li>Stripe</li>
              </ul>
            </div>
            <div class="skill-category">
              <h4>Design</h4>
              <ul>
                <li>Figma</li>
                <li>Adobe Creative Suite</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const toggle = document.querySelector('.skills-toggle');
  const content = document.getElementById('skills-content');
  const preview = document.querySelector('.skills-preview');

  if (toggle && content && preview) {
    toggle.addEventListener('click', () => {
      const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', !isExpanded);
      content.classList.toggle('skills-expanded');
      preview.classList.toggle('skills-preview-hidden');
    });
  }
</script>

<style>
  .about-section {
    background-color: var(--bg-primary);
  }

  .about-content h2 {
    margin-bottom: 24px;
  }

  .about-text-image {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 48px;
    align-items: center;
  }

  .about-text p {
    font-size: 1.05rem;
    margin-bottom: 20px;
    max-width: 640px;
  }

  .about-text p:last-child {
    margin-bottom: 0;
  }

  .tuna-arrow {
    display: inline-block;
    font-weight: 700;
    font-size: 1.2em;
    position: relative;
    top: 3px;
  }

  .about-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .about-image img {
    max-width: 100%;
    height: auto;
    max-height: 280px;
    object-fit: cover;
    border-radius: 8px;
    filter: grayscale(100%);
  }

  .skills-section {
    margin-top: 48px;
  }

  .skills-header-desktop {
    margin-bottom: 24px;
    color: var(--text-primary);
  }

  /* Mobile toggle - hidden on desktop */
  .skills-toggle {
    display: none;
  }

  .skills-preview {
    display: none;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .skill-category h4 {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 12px;
  }

  .skill-category ul {
    list-style: none;
  }

  .skill-category li {
    color: var(--text-secondary);
    font-size: 0.95rem;
    padding: 6px 0;
  }

  @media (max-width: 768px) {
    .about-text-image {
      grid-template-columns: 1fr;
    }

    .about-image {
      margin-top: 24px;
    }

    .about-image img {
      max-height: 300px;
    }

    .tuna-arrow {
      display: none;
    }

    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    /* Hide desktop header, show toggle */
    .skills-header-desktop {
      display: none;
    }

    .skills-toggle {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      padding: 12px 16px;
      background-color: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 8px;
      cursor: pointer;
      margin-bottom: 12px;
      transition: all var(--transition-base);
    }

    .skills-toggle:hover {
      border-color: var(--accent);
    }

    .skills-toggle-text {
      font-size: 1rem;
      font-weight: 600;
      color: var(--text-primary);
    }

    .skills-chevron {
      color: var(--text-muted);
      transition: transform 0.2s ease;
    }

    .skills-toggle[aria-expanded="true"] .skills-chevron {
      transform: rotate(180deg);
    }

    .skills-preview {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-bottom: 16px;
    }

    .skills-preview-hidden {
      display: none;
    }

    .skill-pill {
      padding: 4px 10px;
      background-color: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 16px;
      font-size: 0.8rem;
      color: var(--text-secondary);
    }

    .skill-pill-more {
      padding: 4px 10px;
      font-size: 0.8rem;
      color: var(--text-muted);
    }

    .skills-grid {
      display: none;
      grid-template-columns: 1fr;
    }

    .skills-grid.skills-expanded {
      display: grid;
    }
  }
</style>
