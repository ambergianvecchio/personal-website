    border-radius: 12px;
    transition: all var(--transition-base);
    width: fit-content;
  }

  .contact-link:hover {
    background-color: var(--bg-card-hover);
    border-color: var(--accent);
    color: var(--text-primary);
  }

  .contact-icon {
    color: var(--accent);
  }

  .footer {
    padding: 32px 0;
    background-color: var(--bg-primary);
    border-top: 1px solid var(--border);
  }

  .footer p {
    font-size: 0.9rem;
