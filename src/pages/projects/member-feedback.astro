    font-size: 1rem;
    color: var(--text-primary);
  }

  .case-content {
    padding: 60px 0 80px;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 60px;
    max-width: 1100px;
