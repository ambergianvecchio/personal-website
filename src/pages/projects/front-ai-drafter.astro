    position: absolute;
    top: 0;
    left: 0;
  }

  .workflow-indicator {
    filter: drop-shadow(0 0 4px var(--accent));
  }

  .workflow-step-item {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
    transition: all 0.3s ease;
