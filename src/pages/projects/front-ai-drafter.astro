    transform: scale(1.3);
  }

  .workflow-step-item:hover .workflow-step-label {
    color: var(--accent);
    font-weight: 600;
  }

  .workflow-step-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.4);
